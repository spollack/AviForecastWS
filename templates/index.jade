                a(href='http://play.google.com/store/apps/details?id=com.sebnarware.avalanche')
                  img(src='/img/android_image.png', alt='Avalanche Forecasts on Android phone')
                a(href='http://play.google.com/store/apps/details?id=com.sebnarware.avalanche')
                  img(src='http://developer.android.com/images/brand/en_generic_rgb_wo_45.png', alt='download Avalanche Forecasts for Android', style='margin-bottom:60px;max-height:41px;')

