    body {
      margin-top:30px;
    }
    .x-logo {
      max-height:200px;
    }
    .x-links .span6 {
      text-align:center;
    }
    .x-links a {
      display: block;
    }
    .x-inner-padding {
      padding-left: 10px;
      padding-right: 10px;
    }
    .hero-unit {
      padding:15px;
    }
    @media (min-width: 768px) and (max-width: 979px) {
      .hero-unit h1 {
        font-size:36px;
        line-height:40px;
      }
      .hero-unit p {
        font-size:18px;
        line-height:24px;
      }
    }
    .x-social-container {
      margin-top:10px;
    }
    .x-bottom {
      text-align:center;
    }
    .x-bottom p {
      margin-top:10px;
      font-size:16px;
    }
    .navbar-fixed-bottom {
      position:fixed;
    }
    .x-center {
      text-align:center;
    }

  body
    .container-fluid
      .row-fluid
        .span6
          .hero-unit
            .row-fluid
              .span4.x-center
                img.x-logo(src='/img/logo_256.png')
              .span8
                h1 Avalanche Forecasts
                p The easiest way to see avalanche conditions at-a-glance. Free. For iOS and Android. 
                p View the conditions map, then tap a region to see the detailed avalanche forecast.
                p Caches data you've seen for when you go offline in the mountains.
                p Covers 100+ regions around North America (from nearly every avalanche center), thanks to 
                  a(href='/partners') our forecasting partners
                  | .
                .x-social-container
                  .fb-subscribe(data-href='http://www.facebook.com/AvalancheForecasts', data-show-faces='false', data-width='200px')
                .x-social-container
                  a(href="https://twitter.com/aviforecast", class="twitter-follow-button", data-show-count="false", data-lang="en", data-size="large") Follow @aviforecast
        .span6
          .x-links
            .row-fluid
              .span6
                a(href='http://itunes.apple.com/app/avalanche-forecasts/id501231389?mt=8')
                  img(src='/img/iphone_image.png', alt='Avalanche Forecasts on iPhone')
                a(href='http://itunes.apple.com/app/avalanche-forecasts/id501231389?mt=8')
                  img(src='/img/ios_download_badge.png', alt='download Avalanche Forecasts for iOS')
